<div class="card">
    <section class="flex-container"> 
            <div class="flex-item1">
                <form class="form" action="/addcomentario" method="POST">
                
                        <h3><b>Insira seu comentário abaixo:</h3></p><br>
                        <textarea name='comentarios' id="comentario"></textarea><br>
                        <button type="submit">Cadastrar comentario</button>             
                </form>
            </div>
            <div class="flex-item2">
                    <h3><b>Comentários:</h3></p><br>
                        {{#each posts}}
                                <p>{{dataValues.comentarios}}<p>            
                                <a href="/geraaudio/{{dataValues.comentarios}}"><button>Ouvir</button></a>
                                
                                <br>
                                <br>
                        {{/each}}
                        
            </div>
    </section>
</div>    